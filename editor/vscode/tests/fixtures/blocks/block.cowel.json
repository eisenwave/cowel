{
  "description": "Test blocks as directive arguments with various content",
  "assertions": [
    {
      "type": "top-scope",
      "line": 0,
      "col": 2,
      "expected": "support.function.directive.cowel",
      "description": "Directive name has correct scope"
    },
    {
      "type": "top-scope",
      "line": 1,
      "col": 1,
      "expected": "support.function.directive.cowel",
      "description": "Second directive name has correct scope"
    },
    {
      "type": "token-has-scope",
      "line": 1,
      "col": 4,
      "scope": "meta.content.cowel",
      "description": "Block content has meta.content scope"
    },
    {
      "type": "top-scope",
      "line": 2,
      "col": 5,
      "expected": "constant.character.escape.cowel",
      "description": "Escape inside block has correct scope"
    },
    {
      "type": "top-scope",
      "line": 3,
      "col": 4,
      "expected": "punctuation.section.content.begin.cowel",
      "description": "Nested block open brace has correct scope"
    },
    {
      "type": "top-scope",
      "line": 3,
      "col": 5,
      "expected": "constant.character.escape.bracket.cowel",
      "description": "Escaped open brace has correct scope"
    },
    {
      "type": "top-scope",
      "line": 3,
      "col": 11,
      "expected": "constant.character.escape.bracket.cowel",
      "description": "Escaped close brace has correct scope"
    }
  ]
}
