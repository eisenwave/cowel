{
  "description": "Test escaped braces inside directive content blocks",
  "assertions": [
    {
      "type": "top-scope",
      "line": 0,
      "col": 1,
      "expected": "support.function.directive.cowel",
      "description": "Directive name has correct scope"
    },
    {
      "type": "top-scope",
      "line": 0,
      "col": 3,
      "expected": "constant.character.escape.bracket.cowel",
      "description": "Escaped closing brace has correct scope"
    },
    {
      "type": "top-scope",
      "line": 1,
      "col": 3,
      "expected": "constant.character.escape.bracket.cowel",
      "description": "Escaped opening brace has correct scope"
    },
    {
      "type": "top-scope",
      "line": 2,
      "col": 3,
      "expected": "constant.character.escape.bracket.cowel",
      "description": "First escaped brace in sequence has correct scope"
    },
    {
      "type": "top-scope",
      "line": 2,
      "col": 5,
      "expected": "constant.character.escape.bracket.cowel",
      "description": "Second escaped brace in sequence has correct scope"
    },
    {
      "type": "top-scope",
      "line": 3,
      "col": 3,
      "expected": "constant.character.escape.bracket.cowel",
      "description": "Escaped close then open brace sequence"
    }
  ]
}
