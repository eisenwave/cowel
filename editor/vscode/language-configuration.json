{
  "comments": {
    "lineComment": "\\:",
    "blockComment": [ "\\*", "*\\" ]
  },
  "brackets": [
    [ "(", ")" ],
    [ "{", "}" ],
    [ "[", "]" ]
  ],
  "autoClosingPairs": [
    { "open": "(", "close": ")" },
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "\"", "close": "\"", "notIn": ["string"] },
    { "open": "\\*", "close": "*\\" }
  ],
  "surroundingPairs": [
    [ "(", ")" ],
    [ "{", "}" ],
    [ "[", "]" ],
    [ "\"", "\"" ],
    [ "\\*", "*\\" ]
  ],
  "folding": {
    "markers": {
      "start": "^\\s*\\\\[a-zA-Z_][a-zA-Z0-9_]*\\s*(?:\\(|{)",
      "end": "^\\s*[})]"
    }
  },
  "wordPattern": "\\\\?[a-zA-Z_][a-zA-Z0-9_-]*"
}
