{
  "description": "Test various literal types including keywords, strings, and identifiers",
  "assertions": [
    {
      "type": "top-scope",
      "line": 0,
      "col": 1,
      "expected": "support.function.directive.cowel",
      "description": "Directive name has correct scope"
    },
    {
      "type": "top-scope",
      "line": 1,
