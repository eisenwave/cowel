{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "COWEL",
  "scopeName": "source.cowel",
  "patterns": [
    { "include": "#comments" },
    { "include": "#directives" },
    { "include": "#escapes" },
    { "include": "#literals" },
    { "include": "#strings" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.cowel",
          "match": "\\\\:.*$"
        },
        {
          "name": "comment.block.cowel",
          "begin": "\\\\\\*",
          "end": "\\*\\\\",
          "captures": {
            "0": { "name": "punctuation.definition.comment.cowel" }
          }
        }
      ]
    },
    "directives": {
      "patterns": [
        {
          "name": "meta.directive.cowel",
          "begin": "(\\\\)([a-zA-Z_][a-zA-Z0-9_]*)",
          "beginCaptures": {
            "1": { "name": "punctuation.definition.directive.cowel" },
            "2": { "name": "entity.name.function.directive.cowel" }
          },
          "end": "(?=[^\\\\]|$)",
          "patterns": [
            { "include": "#directive-arguments" },
            { "include": "#directive-content" }
          ]
        }
      ]
    },
    "directive-arguments": {
      "patterns": [
        {
          "name": "meta.arguments.cowel",
          "begin": "\\(",
          "beginCaptures": {
            "0": { "name": "punctuation.section.arguments.begin.cowel" }
          },
          "end": "\\)",
          "endCaptures": {
            "0": { "name": "punctuation.section.arguments.end.cowel" }
          },
          "patterns": [
            { "include": "#argument" },
            { "include": "#comments" }
          ]
        }
      ]
    },
    "directive-content": {
      "patterns": [
        {
          "name": "meta.content.cowel",
          "begin": "\\{",
          "beginCaptures": {
            "0": { "name": "punctuation.section.content.begin.cowel" }
          },
          "end": "\\}",
          "endCaptures": {
            "0": { "name": "punctuation.section.content.end.cowel" }
          },
          "patterns": [
            { "include": "$self" }
          ]
        }
      ]
    },
    "argument": {
      "patterns": [
        {
          "name": "variable.parameter.named.cowel",
          "match": "([a-zA-Z_][a-zA-Z0-9_-]*)\\s*(=)\\s*",
          "captures": {
            "1": { "name": "entity.name.tag.cowel" },
            "2": { "name": "keyword.operator.assignment.cowel" }
          }
        },
        {
          "name": "constant.language.ellipsis.cowel",
          "match": "\\.\\.\\."
        },
        { "include": "#literals" },
        { "include": "#strings" },
        { "include": "#unquoted-argument-content" }
      ]
    },
    "unquoted-argument-content": {
      "patterns": [
        {
          "name": "string.unquoted.cowel",
          "match": "[^,\\)\\s]+"
        }
      ]
    },
    "literals": {
      "patterns": [
        {
          "name": "constant.numeric.integer.binary.cowel",
          "match": "-?0b[01]+"
        },
        {
          "name": "constant.numeric.integer.octal.cowel",
          "match": "-?0o[0-7]+"
        },
        {
          "name": "constant.numeric.integer.hex.cowel",
          "match": "-?0x[0-9a-fA-F]+"
        },
        {
          "name": "constant.numeric.integer.decimal.cowel",
          "match": "-?[0-9]+"
        },
        {
          "name": "constant.numeric.float.cowel",
          "match": "-?(?:[0-9]+\\.[0-9]*|\\.[0-9]+)(?:[eE][+-]?[0-9]+)?|infinity"
        },
        {
          "name": "constant.language.cowel",
          "match": "\\b(?:unit|null|true|false)\\b"
        }
      ]
    },
    "escapes": {
      "patterns": [
        {
          "name": "constant.character.escape.cowel",
          "match": "\\\\[{}\\\\\\[\\](),.=!\"#$%&'+/;<>?@^|~\\-\\s]"
        },
        {
          "name": "constant.character.escape.newline.cowel",
          "match": "\\\\(?:\\n|\\r|\\r\\n)"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.cowel",
          "begin": "\"",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.string.begin.cowel" }
          },
          "end": "\"",
          "endCaptures": {
            "0": { "name": "punctuation.definition.string.end.cowel" }
          },
          "patterns": [
            { "include": "#escapes" }
          ]
        }
      ]
    }
  }
}
