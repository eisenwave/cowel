{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "COWEL",
  "scopeName": "source.cowel",
  "patterns": [
    { "include": "#comments" },
    { "include": "#escapes" },
    { "include": "#directives" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.cowel",
          "match": "\\\\:.*$"
        },
        {
          "name": "comment.block.cowel",
          "begin": "\\\\\\*",
          "end": "\\*\\\\"
        }
      ]
    },
    "directives": {
      "patterns": [
        {
          "begin": "\\\\([a-zA-Z_][a-zA-Z0-9_]*)",
          "beginCaptures": {
            "0": { "name": "support.function.directive.cowel" }
          },
          "end": "(?!\\(|\\{)",
          "patterns": [
            { "include": "#directive-arguments" },
            { "include": "#directive-content" }
          ]
        }
      ]
    },
    "escapes": {
      "patterns": [
        {
          "name": "constant.character.escape.cowel",
          "match": "\\\\[{}\"\\\\]"
        },
        {
          "name": "constant.character.escape.newline.cowel",
          "match": "\\\\(?:\\r\\n|\\r|\\n)"
        },
        {
          "name": "invalid.illegal.escape.cowel",
          "match": "\\\\[^{}\"\\\\a-zA-Z_*:\\r\\n]"
        }
      ]
    },
    "directive-arguments": {
      "patterns": [
        {
          "name": "meta.arguments.cowel",
          "begin": "\\G\\(",
          "beginCaptures": {
            "0": { "name": "punctuation.section.arguments.begin.cowel" }
          },
          "end": "\\)",
          "endCaptures": {
            "0": { "name": "punctuation.section.arguments.end.cowel" }
          },
          "patterns": [
            { "include": "#argument" },
            { "include": "#comments" }
          ]
        }
      ]
    },
    "directive-content": {
      "patterns": [
        {
          "name": "meta.content.cowel",
          "begin": "\\G\\{",
          "beginCaptures": {
            "0": { "name": "punctuation.section.content.begin.cowel" }
          },
          "end": "\\}",
          "endCaptures": {
            "0": { "name": "punctuation.section.content.end.cowel" }
          },
          "patterns": [
            { "include": "$self" }
          ]
        },
        {
          "name": "meta.content.cowel",
          "begin": "(?<=\\))\\{",
          "beginCaptures": {
            "0": { "name": "punctuation.section.content.begin.cowel" }
          },
          "end": "\\}",
          "endCaptures": {
            "0": { "name": "punctuation.section.content.end.cowel" }
          },
          "patterns": [
            { "include": "$self" }
          ]
        }
      ]
    },
    "argument": {
      "patterns": [
        {
          "name": "variable.parameter.named.cowel",
          "begin": "(\")(?=[^\"]*\"\\s*=)",
          "beginCaptures": {
            "1": { "name": "string.quoted.double.cowel meta.object-literal.key.cowel punctuation.definition.string.begin.cowel" }
          },
          "end": "(\")\\s*(=)",
          "endCaptures": {
            "1": { "name": "string.quoted.double.cowel meta.object-literal.key.cowel punctuation.definition.string.end.cowel" },
            "2": { "name": "keyword.operator.assignment.cowel" }
          },
          "contentName": "string.quoted.double.cowel meta.object-literal.key.cowel",
          "patterns": [
            { "include": "#escapes" },
            { "include": "#directives" },
            { "include": "#comments" }
          ]
        },
        {
          "name": "variable.parameter.named.cowel",
          "match": "([a-zA-Z_][a-zA-Z0-9_-]*)\\s*(=)",
          "captures": {
            "1": { "name": "entity.other.attribute-name.cowel" },
            "2": { "name": "keyword.operator.assignment.cowel" }
          }
        },
        {
          "name": "constant.language.ellipsis.cowel",
          "match": "\\.\\.\\."
        },
        { "include": "#literals" },
        { "include": "#strings" },
        {
          "name": "string.unquoted.cowel",
          "match": "[a-zA-Z_][a-zA-Z0-9_-]*"
        },
        {
          "comment": "Nested groups",
          "begin": "\\(",
          "beginCaptures": {
            "0": { "name": "punctuation.section.group.begin.cowel" }
          },
          "end": "\\)",
          "endCaptures": {
            "0": { "name": "punctuation.section.group.end.cowel" }
          },
          "patterns": [
            { "include": "#argument" }
          ]
        },
        { "include": "#directives" },
        { "include": "#comments" }
      ]
    },
    "literals": {
      "patterns": [
        {
          "name": "constant.numeric.integer.binary.cowel",
          "match": "-?0b[01]+(?![-0-9a-zA-Z.])"
        },
        {
          "name": "constant.numeric.integer.octal.cowel",
          "match": "-?0o[0-7]+(?![-0-9a-zA-Z.])"
        },
        {
          "name": "constant.numeric.integer.hex.cowel",
          "match": "-?0x[0-9a-fA-F]+(?![-+0-9a-zA-Z.])"
        },
        {
          "name": "constant.numeric.float.cowel",
          "match": "-?(?:[0-9]+\\.[0-9]*|\\.[0-9]+)(?:[eE][+-]?[0-9]+)?(?![-0-9a-zA-Z.])"
        },
        {
          "name": "constant.numeric.float.cowel",
          "match": "-?[0-9]+[eE][+-]?[0-9]+(?![-0-9a-zA-Z.])"
        },
        {
          "name": "constant.numeric.float.cowel",
          "match": "\\b-?infinity\\b"
        },
        {
          "name": "constant.numeric.integer.decimal.cowel",
          "match": "-?[0-9]+(?![-0-9a-zA-Z.])"
        },
        {
          "name": "invalid.illegal.number.cowel",
          "match": "(?:-?(?=[0-9])|\\.)(?:e\\+|E\\+|e-|E-|[0-9a-zA-Z.])+"
        },
        {
          "name": "constant.language.cowel",
          "match": "(?<![-a-zA-Z0-9_])(?:unit|null|true|false)(?![-a-zA-Z0-9_])"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.cowel",
          "begin": "\"",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.string.begin.cowel" }
          },
          "end": "\"",
          "endCaptures": {
            "0": { "name": "punctuation.definition.string.end.cowel" }
          },
          "patterns": [
            { "include": "#escapes" },
            { "include": "#directives" },
            { "include": "#comments" }
          ]
        }
      ]
    }
  }
}
