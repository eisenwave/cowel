{
  "description": "Test comments inside directive argument lists",
  "assertions": [
    {
      "type": "top-scope",
      "line": 0,
      "col": 1,
      "expected": "support.function.directive.cowel",
      "description": "Directive name has correct scope"
    },
    {
      "type": "top-scope",
      "line": 1,
      "col": 2,
      "expected": "comment.line.cowel",
      "description": "Line comment inside arguments has correct scope"
    },
    {
      "type": "top-scope",
      "line": 2,
      "col": 2,
      "expected": "comment.line.cowel",
      "description": "Second line comment inside arguments has correct scope"
    },
    {
      "type": "top-scope",
      "line": 4,
      "col": 0,
      "expected": "comment.line.cowel",
      "description": "Line comment between directives has correct scope"
    },
    {
      "type": "top-scope",
      "line": 5,
      "col": 1,
      "expected": "support.function.directive.cowel",
      "description": "Second directive name has correct scope"
    },
    {
      "type": "top-scope",
      "line": 6,
      "col": 2,
      "expected": "comment.line.cowel",
      "description": "Comment before argument has correct scope"
    },
    {
      "type": "top-scope",
      "line": 8,
      "col": 2,
      "expected": "comment.line.cowel",
      "description": "Comment before named argument has correct scope"
    },
    {
      "type": "top-scope",
      "line": 9,
      "col": 2,
      "expected": "entity.name.tag.cowel",
      "description": "Named argument after comment has correct scope"
    }
  ]
}
